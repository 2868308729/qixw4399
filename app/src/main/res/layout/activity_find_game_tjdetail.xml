<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.qianfeng.qixw4399.findgame.ui.FindGameTJDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp">
            <TextView
                android:layout_centerInParent="true"
                android:id="@+id/headImg_detail_jj_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="简介"/>
            <View
                android:id="@+id/headImg_detail_line1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:background="#0f0"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp">
            <TextView
                android:layout_centerInParent="true"
                android:id="@+id/headImg_detail_gl_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="攻略"/>
            <View
                android:id="@+id/headImg_detail_line2"
                android:layout_alignParentBottom="true"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:visibility="invisible"
                android:background="#0f0"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp">
            <TextView
                android:layout_centerInParent="true"
                android:id="@+id/headImg_detail_ph_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="排行"/>
            <View
                android:id="@+id/headImg_detail_line3"
                android:visibility="invisible"
                android:layout_alignParentBottom="true"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#0f0"/>
        </RelativeLayout>
    </LinearLayout>
    `<View
    android:layout_marginTop="1dp"
    android:layout_width="match_parent"
    android:layout_height="1.5dip"
    android:background="@color/white_gray"/>
   <android.support.v4.view.ViewPager
        android:id="@+id/headImg_detail_viewPager"
        android:layout_width="match_parent"
       android:layout_weight="1"
        android:layout_height="0dp"></android.support.v4.view.ViewPager>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="70dp">
        <LinearLayout
            android:layout_centerVertical="true"
            android:id="@+id/gamesDetail_footer_sc_ll"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView

                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/m4399_png_friend_list_icon_m4399_png_friend_list_icon_star_unselected"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="收藏"/>
        </LinearLayout>
        <Button
            android:layout_centerInParent="true"
            android:id="@+id/gamesDetail_footer_down_btn"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="@color/green"
            android:text="下载"/>
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/gamesDetail_footer_yxq_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/gamesDetail_footer_yxq_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/m4399_png_battle_report_list_cell_gamehub"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="游戏圈"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
