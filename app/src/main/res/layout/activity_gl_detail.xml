<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".findgame.ui.GlItem1DetailActivity">
    <WebView
        android:id="@+id/glitem1Detail_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></WebView>
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/findgame_game_rl">
        <Button
            android:id="@+id/glitem1Detail_down_btn"
            android:layout_alignParentRight="true"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@color/green"
            android:text="@string/download"
            android:textColor="@color/white"/>
        <ImageView
            android:layout_margin="5dp"
            android:layout_alignParentLeft="true"
            android:id="@+id/glitem1Detail_header_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/m4399_png_widget_icon"
            />
        <TextView
            android:layout_margin="5dp"
            android:id="@+id/glitem1Detail_name_tv"
            android:layout_toRightOf="@id/glitem1Detail_header_iv"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            />
        <LinearLayout
            android:id="@+id/glitem1Detail_ll"
            android:layout_toRightOf="@id/glitem1Detail_header_iv"
            android:layout_below="@id/glitem1Detail_name_tv"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:id="@+id/glitem1Detail_downcount_tv"
                android:layout_marginLeft="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:text="37.2d+sdf"/>
            <TextView
                android:id="@+id/glitem1Detail_size_tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:text="37.03M"/>
            <TextView
                android:id="@+id/glitem1Detail_type_tv"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="30dp"
                android:text="37.03M"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
